<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Douaa Test</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f8ff;
            margin: 0;
            transition: background-color 0.5s;
        }

        form {
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s;
        }

        form:hover {
            transform: scale(1.05);
        }

        input[type="text"] {
            padding: 12px;
            width: 250px;
            margin-bottom: 15px;
            border: 2px solid #ccc;
            border-radius: 5px;
            transition: border-color 0.3s;
        }

        input[type="text"]:focus {
            border-color: #28a745;
            outline: none;
        }

        input[type="submit"] {
            padding: 12px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s, transform 0.3s;
        }

        input[type="submit"]:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

        #message {
            margin-top: 20px;
            font-size: 24px;
            color: #333;
            opacity: 0;
            transition: opacity 0.5s;
        }

        #message.show {
            opacity: 1;
        }

        /* Heart Animation Styles */
        .heart {
            display: none;
            position: absolute;
            font-size: 100px;
            color: red;
            animation: pulse 1s infinite;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
                opacity: 0.5;
            }
            50% {
                transform: scale(1.2);
                opacity: 1;
            }
            100% {
                transform: scale(1);
                opacity: 0.5;
            }
        }
    </style>
</head>
<body>

    <form id="loveForm" onsubmit="return displayMessage(event)">
        <label for="name">Enter your name:</label><br>
        <input type="text" id="name" name="name" required><br>
        <input type="submit" value="Submit">
    </form>

    <div id="message"></div>
    <div id="heart" class="heart">❤️</div>

    <script>
        function displayMessage(event) {
            event.preventDefault(); // Prevent form submission
            const name = document.getElementById('name').value.trim();
            const messageDiv = document.getElementById('message');
            const heartDiv = document.getElementById('heart');
            
            if (name.toLowerCase() === 'mousaab') {
                messageDiv.textContent = `I love you my only love, Mousaab!`;
                heartDiv.style.display = 'block'; // Show heart
            } else {
                messageDiv.textContent = `Hello, ${name}!`;
                heartDiv.style.display = 'none'; // Hide heart
            }

            // Show the message with a fade-in effect
            messageDiv.classList.add('show');
        }
    </script>

</body>
</html>